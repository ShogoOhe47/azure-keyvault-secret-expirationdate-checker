{
  "bindings": [
    {
      "name": "myTimer",
      "type": "timerTrigger",
      "direction": "in",
      "schedule": "0 0 0 * * *",
      "runOnStartup": true,
      "useMonitor": true
    },
    {
      "name": "$return",
      "type": "sendGrid",
      "direction": "out",
      "apiKey" : "AzureWebJobsSendGridApiKey"
    }
  ]
}